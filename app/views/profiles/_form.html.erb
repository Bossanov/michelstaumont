
<%= simple_form_for @profile do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :last_name %>
    <%= f.input :first_name %>
    <%= f.input :rue %>
    <%= f.input :postcode %>
    <%= f.input :pays %>
    <%= f.input :phone %>
    <%= f.input :statut %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
